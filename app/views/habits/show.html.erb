<h1>習慣詳細ページ</h1>
<%= link_to user_path(@habit.user_id), method: :get do %>
  <%= @habit.user.nickname %>
<% end %>
<%= @habit.title %>
<%= @habit.level %>レベル
<%= @habit.content %>

<% if user_signed_in? && current_user.id == @habit.user_id %>
  <%= link_to "習慣を削除", habit_path(@habit.id), method: :delete %>
  <%= link_to "習慣を編集", edit_habit_path(@habit.id), method: :get %>
<% end %>

<h3>最近の習慣記録</h3>
<% @records.first(2).each do |record| %>
  <%= render partial: 'records/record', locals: { record: record } %>
  <%= record.text %>
<% end %>

<%= javascript_pack_tag 'habit/show' %>
<div id='calendar'></div>