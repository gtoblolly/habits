<% @habits.each do |habit| %>
  <%= habit.title %>
  <% @records.each do |record| %>
    <% if habit.id == record.habit_id %>
      <%= record.text %>
      <%= link_to "記録詳細", habit_record_path(habit.id, record.id), method: :get %>
    <% end %>
  <% end %>
  <%= link_to "削除", habit_path(habit.id), method: :delete %>
  <%= link_to "編集", edit_habit_path(habit.id), method: :get %>
  <%= link_to "詳細", habit_path(habit.id), method: :get %>
<% end %>

<% if @habits.ids.present? %>
  <%= link_to "記録する", new_habit_record_path(@habits.ids), method: :get %>
<% end %>