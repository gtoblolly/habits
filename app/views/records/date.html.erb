<div class="heading h2">
  <%= @date.strftime("%Y年%m月%d日") %>の
  <% if @user %>
    <%= @user.nickname %>さんの記録一覧ページ
  <% elsif @habit %>
    <%= @habit.title %>習慣の記録一覧ページ
  <% else %>
    みんなの記録一覧ページ
  <% end %>
</div>

<% @records.each do |record| %>
  <%= render partial: 'records/record', locals: { record: record } %>
<% end %>