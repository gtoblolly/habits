<%= @nickname %>

<% @habits.each do |habit| %>
  <%= habit.title %>
  <%= link_to "詳細", habit_path(habit.id), method: :get %>
  <% if current_user.id == habit.user_id %>
    <%= link_to "削除", habit_path(habit.id), method: :delete %>
    <%= link_to "編集", edit_habit_path(habit.id), method: :get %>
  <% end %>
<% end %>

<% @habits.first(2).zip(@records) do |habit, record| %>
  <%= record.created_at.strftime('%Y/%m/%d') %>
  <%= habit.title %>
  <%= record.text %>
<% end %>

<%= link_to "習慣を作る", new_habit_path %>